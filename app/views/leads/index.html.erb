
<section class="charts">
  <div class="container-fluid">
    <header> 
      <h1 class="h3">All Leads</h1>
    </header>
    <div class="row">
      <%= form_tag('/leads', method: :get) do %>
        <%= text_field_tag :search %>
        <%= submit_tag "Search" %>
      <% end %>

      <%= link_to 'Call Next Lead', '/' %>
    </div>
    <div class="row">
      
      <div class="col-lg-6">
        <div class="card">
          <div class="card-block">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Created</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>City</th>
                  <th>State</th>
                  <th>Zip</th>
                  <th>Contacted</th>
                  <th>Appointment Date</th>
                </tr>
              </thead>
              <tbody>
                <% @leads.each do |lead| %>
                  <tr>
                    <td><%= lead.created_at.strftime("%A %b %e, %l:%M %p") %></td>
                    <td><%= lead.first_name %></td>
                    <td><%= lead.last_name %></td>
                    <td><%= link_to lead.email, edit_lead_path(lead) %></td>
                    <td><%= lead.phone %></td>
                    <td><%= lead.city %></td>
                    <td><%= lead.state %></td>
                    <td><%= lead.zip %></td>
                    <td><%= lead.contacted %></td>
                    <td><%= lead.appointment_date %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      

    </div>
  </div>
</section>